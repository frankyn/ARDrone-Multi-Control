<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainView"
    android:id="@+id/MainView">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/bnStart"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Land"
        android:id="@+id/bnLand"
        android:layout_below="@+id/bnStart"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forw"
        android:id="@+id/bnFront"
        android:layout_marginRight="85dp"
        android:layout_alignTop="@+id/bnStart"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left"
        android:id="@+id/bnLeft"
        android:layout_toStartOf="@+id/bnFront"
        android:layout_marginRight="22dp"
        android:layout_below="@+id/bnFront" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right"
        android:id="@+id/bnRight"
        android:layout_toStartOf="@+id/bnFront"
        android:layout_below="@+id/bnFront"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/bnBack"
        android:layout_toEndOf="@+id/bnLeft"
        android:layout_below="@+id/bnRight" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Up"
        android:id="@+id/bnUp"
        android:layout_toEndOf="@+id/bnLeft"
        android:layout_below="@+id/bnBack"
        android:layout_alignEnd="@+id/bnBack"
        android:layout_marginTop="62dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Down"
        android:id="@+id/bnDown"
        android:layout_toEndOf="@+id/bnLeft"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/bnUp"
        android:layout_alignStart="@+id/bnUp" />

</RelativeLayout>
